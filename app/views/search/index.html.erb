<% content_for :head do %>
<meta http-equiv="content-type" name="viewport" content="initial-scale=1.0, user-scalable=no"/> 

<title>Search</title>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>

<%= javascript_include_tag 'map' %>

<script type="text/javascript">
  function getMap() {
  var map = document.getElementById("map_canvas");
  initGSearch(document.getElementById("map_canvas"));
  }

  function directions() {
  var begin = document.getElementById("start").value;
  var finish = document.getElementById("end").value;
  getDirections(begin, finish);
  }
  window.onload = getMap;
</script>
<% end %>
<div id=page>
  <div id="wrapper">
    <h2> Search for a path </h2>

    <fieldset>
      <% 2.times do %>
      &nbsp
      <% end %>
      <label for="category">From: </label>
      <input type="text" id="start" />
      <% 5.times do %>
      &nbsp
      <% end %>
      <label for="category">To: </label>
      <input type="text" id="end" /> 
      <% 5.times do %>
      &nbsp
      <% end %>
      <button id="search" onClick="directions()"> Search! </button>
    </fieldset>
    <br />
    <div id="content">





      <div id="map_canvas" style="width:500px; height:400px"></div>

    </div>
    <div id="sidebar1" class="sidebar">
      <div id="directionsPanel" style="width:100%;height:40%;"></div>
    </div>
  </div>
</div>
