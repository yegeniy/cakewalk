<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Options</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name %></td>
    <td><%= link_to 'Show', user %>
    	<%= link_to 'Edit', edit_user_path(user) %>
    	<%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New user', new_user_path %>