<% form_for(@path) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <h5>Add Edges</h5>
  <% f.fields_for :edges do |builder| %>
    <%= render 'edge_fields', :f => builder %>
  <% end %>
  <p>
    <%= f.submit 'Submit' %>
  </p>

<% end %>
