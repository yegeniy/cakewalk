<h1>New edge</h1>

<% form_for(@edge) do |f| %>
  <%= f.error_messages %>

  <p> From? <br />
	<% for fpoint in Point.all do %>
		<%= f.radio_button(:point_id, fpoint.id) %> <%= f.label fpoint.name%>
		<br />
    <% end %>
  </p>

	<p> To? <br />
	<% for tpoint in Point.all do %>
		<%= f.radio_button(:to_point_id, tpoint.id) %> <%= f.label tpoint.name%>
		<br />
 	<% end %>
	</p>
  <p>
    <%= f.label :direction %><br />
    <%= f.text_field :direction %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', edges_path %>