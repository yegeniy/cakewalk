<h1>Listing edges</h1>

<table>
  <tr>
    <th>From</th>
    <th>To</th>
    <th>Direction</th>
    <th> Options </th>
  </tr>

<% @edges.each do |edge| %>
  <tr>
    <td><%=h edge.point.name %></td>
    <td><%=h edge.to_point.name %></td>
    <td><%=h edge.direction %></td>
    <td><%= link_to 'Show', edge %>
    	<%= link_to 'Edit', edit_edge_path(edge) %>
    	<%= link_to 'Destroy', edge, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New edge', new_edge_path %>