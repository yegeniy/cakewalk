<% content_for :head do %>
<meta http-equiv="content-type" content="text/html; charset=utf-8"/>
<title>Google Maps JavaScript API Example</title>

<script src="http://maps.google.com/maps?file=api&v=2&key=ABQIAAAAxEu4zYabDH1ybGR2fHbcZxSIOG_jcHTbyiVdF_0wDxeB8HluTRS8uPj0RuK03a-gofElARj0S6zaTQ" type="text/javascript"></script>

<%=javascript_include_tag 'operate_marker'%>
<script type="text/javascript">

	function showAddress() {
		var address = document.getElementById("center").value;
	      if (geocoder) {
	        geocoder.getLatLng(
	          address,
	          function(point) {
	            if (!point) {
	              alert(address + " not found");
	            } else {
	              map.setCenter(point, 13);
				}
			}
		);
		}
	}
</script>
<% end %>

<fieldset>
	<% 2.times do %>
		&nbsp
	<% end %>
	<label for="where"> New Center Location: </label>
	<input type="text" id="center" />
	<button id="move" onClick="showAddress()"> GO! </button>
</fieldset>

<div id="map" style="width: 700px; height: 400px"></div>
